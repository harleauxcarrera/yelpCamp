<% include ../partials/header%>
<style>

.inputfield{
    height: 200px;
   
}
</style>


<div class="container">
    
    <div class="row"> 
         <h1 style="text-align: center">Create a new Campground</h1>
         <div style="width: 30%; margin: 36px auto;"> <!--margin used to center form-->
         
            <form action="/campgrounds" method="POST">
                
                
                <div class="form-group">
                   <input class="form-control" type="text" name="name" placeholder="Enter  name">  
                </div>
                
                <div class="form-group">
                 <input class="form-control" type="text" name="image" placeholder="Enter the image URL">
                </div> 
                
                <div class="form-group">
                 <input class="form-control" type="text" name="description" placeholder="Enter a description of the campground">
                </div>
                
                
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>  
            </form>
            <a href="/campgrounds">Go Back</a>
    </div>
  
</div>
